{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "vesium": ["./packages/alias"],
      "@vesium/core": ["./packages/core"],
      "@vesium/shared": ["./packages/shared"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/.vitepress/theme/**/*.{vue,ts,json}",
    "packages/.vitepress/components.d.ts",
    "packages/.vitepress/auto-imports.d.ts",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "packages/core/createViewer/.docs/demo.vue"
  ],
  "exclude": [
    "**/cache/**",
    "**/node_modules/**"
  ]
}
